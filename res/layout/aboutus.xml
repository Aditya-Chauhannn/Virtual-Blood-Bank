<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#6DDEE1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        android:gravity="center"
        android:paddingBottom="10dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_cover_logo"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Virtual BloodBank - Your trusted platform for finding and donating blood efficiently."
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:autoLink="web" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We aim to bridge the gap between blood donors and recipients through technology and innovation."
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:textColor="#555555"
        android:gravity="center"
        android:padding="10dp" />

</LinearLayout>
