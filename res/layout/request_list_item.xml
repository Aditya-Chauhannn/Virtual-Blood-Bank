<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/red_button_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_blood_transfusion"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/targetBG"
                    android:textSize="16sp"
                    android:text="AB+"
                    android:textStyle="bold"
                    android:textColor="#090909"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Blood Donor!"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Contact: "
                    android:layout_width="wrap_content"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/targetCN"
                    android:text="+8801234567890"
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/reqstUser"
                android:text="Requested by: Alamin Hossain"
                android:layout_width="match_parent"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/posted"
                android:text="Posted: 11:30 PM, 17/10/2018"
                android:layout_width="match_parent"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reqstLocation"
                android:text="From: Kushtia, Khulna"
                android:layout_width="match_parent"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content" />

            <!-- Delete Button (Initially Hidden) -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textStyle="italic"
                android:background="@drawable/signin_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#FFF3F3"
                android:layout_gravity="end"
                android:padding="5dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
